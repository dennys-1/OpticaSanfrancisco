@{
    
    Layout="_Layout";
}
@model Validacion

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" />
    <!--Google fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@500&display=swap" rel="stylesheet">
    <!--Font Awesome-->
    

</head>

<link rel="stylesheet" href="~/css/estilos.css" />


<div class="row">
  
   <h1 style="text-align: center;">Validacion</h1>
  </div>
<div class="row" >
  <div class="col-md-6">

<form asp-controller="Validacion" asp-action="Create">


     <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select name="IDTipo" class="form-control">
                    @foreach (Tipo tipo in ViewBag.Tipo)
                    {
                        <option value="@tipo.ID">@tipo.Nombre</option>
                    }
                </select>
            </div>

     <div class="form-group" >
          <label asp-for="N_DOCUMENTO" class="control-label"></label>
            <input asp-for="N_DOCUMENTO" class="form-control" type="number" required/>
            </div>  

            <div class="form-group" style="text-align: left;">
                <label asp-for="EMAIL" class="control-label"></label>
                <input asp-for="EMAIL" class="form-control"  type="email" required/>
            </div>               
                   
            <div class="form-group" style="text-align: left;">
                <label asp-for="NOMBRE" class="control-label"></label>
                <input asp-for="NOMBRE" class="form-control" type="text" maxlength="9" required />
            </div>  
            <div class="form-group" style="text-align: left;">
                <label asp-for="APELLIDO" class="control-label"></label>
                <input asp-for="APELLIDO" class="form-control" type="text" required />
            </div>  
             <div class="form-group" style="text-align: left;">
                <label asp-for="TELEFONO" class="control-label"></label>
                <input asp-for="TELEFONO" class="form-control" type="number" required />
            </div>   
                   
            <div class="form-group"  >
                 <button type="submit" class="btn btn-primary" type="text" required>Enviar</button> 
            </div>       
                     

</form>
  </div>


<br>

<div class="alert alert-success" role="alert">
    <h1>@ViewData["Message"]</h1>
</div>
