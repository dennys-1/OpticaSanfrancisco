@model dynamic

@{
    ViewData["Title"] = "Ingresar Producto";
    Validacion validacion = @Model.validacion;
}




<div class="row">
    <div class="col-md-4">  
        <h3 class="titulo">Ingresar Producto </h3></p>

        <form asp-controller="Validacion" asp-action="Formulario" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@validacion.EMAIL" class="control-label"></label>
                <input asp-for="@validacion.EMAIL" class="form-control" />
                <span asp-validation-for="@validacion.EMAIL" class="text-danger"></span>
            </div>    

            <div class="form-group">
                <label asp-for="@validacion.Tipo" class="control-label"></label>
                <select name="IDTipo" class="custom-select">
                    @foreach (Tipo tipo in Model.Tipo)
                    {
                        <option value="@tipo.ID">@tipo.Nombre</option>
                    }
                </select>
            </div>
          
            @* <div class="form-group">
                <label asp-for="@validacion.Imagen" class="control-label"></label>
                <input type="file" asp-for="@validacion.Imagen" class="form-control" accept="image/*"/>
            </div>                *@

             <div class="form-group">
                <label asp-for="@validacion.N_DOCUMENTO" class="control-label"></label>
                <input asp-for="@validacion.N_DOCUMENTO" class="form-control" />
            </div> 

            <div class="form-group">
                <label asp-for="@validacion.NOMBRE" class="control-label"></label>
                <input asp-for="@validacion.NOMBRE" class="form-control" />
            </div> 
                   
            <div class="form-group">
                <label asp-for="@validacion.APELLIDO" class="control-label"></label>
                <input asp-for="@validacion.APELLIDO" class="form-control" />
            </div>               

            <div class="form-group">
                <label asp-for="@validacion.TELEFONO" class="control-label"></label>
                <input asp-for="@validacion.TELEFONO" class="form-control" />
            </div>                                   



            <div class="form-group">
                 <button type="submit"  class="btn btn-success">Agregar</button> 
            </div>                

        </form>
            


        <td></td>    
        @* <td>@Html.DisplayTextFor(model => model.Respuesta)</td> *@
        @validacion.Respuesta

    </div>
</div>


