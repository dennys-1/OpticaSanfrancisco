      <h4 style="text-align: center;" class="mb-3 colorForm">CONT√ÅCTANOS</h4>

       <form class="needs-validation" novalidate=""></form>
        <div class="row">
          <div class="col-md-6 mb-3 formM">
            <label for="firstName" class="colorForm">Nombre</label>
            <input asp-for="Nombre"  class="form-control" />
