@model dynamic

@{
	ViewData["Title"] = "Producto";
}

<div class="row">
	<div class="col-md-4">
		<h3 class="titulo">Productos </h3>
	</div>
</div>

<div class="input-group mb-3">
	<form asp-controller="Tipo" asp-action="Producto">
	<select class="custom-select btn btn-outline-light" type="button"  name="BuscarProducto" onchange="this.form.submit()">
		<option ><i class="fas fa-leaf"></i>Tipo de Producto</option>
		@foreach (Tipo item in Model.Tipo)
		{
			<option class="dropdown-item" value="@item.ID">@item.Nombre</option>
		}
	</select>
	</form>
</div>




