@model IEnumerable<OpticaSanfrancisco.Models.Tipo>

@{
	ViewData["Title"] = "Tipo de Producto";
}

<div class="row">
  <div class="col-md-4">
    <h3 class="titulo">Tipos de Celulares</h3>
  </div>
</div>

@* <p>
    <a asp-action="Create" class="btn btn-outline-light">Crear Tipos</a>
</p> *@
<div style="margin-bottom: 10px">
<a type="button" class="btn btn-dark" href="~/TipoProducto/Create">Agregar</a>
</div>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
                <th scope="col">
                    Acci√≥n
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th> 
        </tr>
    </thead>

    <tbody>

    @if (Model.Count() == 0) {
            <tr>
                <td colspan="5" class="text-center">No se encontraron registros.</td>
            </tr>
    }

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">
                <a asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a> |
                
                @* <a asp-action="Delete" asp-route-id="@item.ID"><i class="fas fa-trash"></i></a> *@
                @if (item.Deshabilitado==false){
                    <a asp-controller="TipoProducto" asp-action="Habilitar" asp-route-id="@item.ID"><i class="fas fa-eye"></i></a>
                }
                else{
                    <a asp-controller="TipoProducto" asp-action="Habilitar" asp-route-id="@item.ID"><i class="fas fa-eye-slash"></i></a>
                }
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
        </tr>
    }        
    </tbody>    
</table>