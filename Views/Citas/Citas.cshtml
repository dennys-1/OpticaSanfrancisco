@{
    
    Layout="_Layout";
}
@model IEnumerable<OpticaSanfrancisco.Models.Citas>

<h2>Lista Citas</h2>

<p>
    <a asp-action="NuevaCita">SOY CABRO</a>
</p>
<table class="table table-hover">
     <thead class="thead-dark">
        <tr>
           
                <th scope="col">
                    #
                </th>
                
                <th scope="col">
                    @Html.DisplayNameFor(model => model.TipoDeCita)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Celular)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.DNI)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                 <th scope="col">
                    @Html.DisplayNameFor(model => model.Hora)
                </th>
                 
                 
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.id)  
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoDeCita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DNI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hora)
                </td>
                <td>

                <a href="/Citas/EditarCitas/@item.id" class="btn btn-secondary">editar</a>
                <form action="/Citas/BorrarCitas" method="POST" class="d-inline-block">
                <input type="hidden" name="id" value="@item.id"/>
                    <button class="btn btn-danger"> borrar</button>

                </form>
                
                  </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="ExportarExcel">Exporta a Excel</a>