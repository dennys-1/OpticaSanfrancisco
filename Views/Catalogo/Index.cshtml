@model IEnumerable<OpticaSanfrancisco.Models.Productos>
@{
    ViewData["Title"]="Catalogo";
}
<form  asp-action="Index" method="get">
    <p>
         <input type="search" placeholder="enter"  value=" @ViewData["Getemployeedetails"]" name="Empsearch"/>
        <input type="submit" value="search" class="btn btn-primary" />

        <a asp-action="Index">enter</a>
    </p>
</form>



<h1>@ViewData["Title"]</h1>
  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="card-img-actions">
                    <img class="img-responsive" width="200" height="150"
                       src="~/Img/Productos/@item.Imagen" alt="@item.Imagen"  />
                  </div>
                </div>
                <div class="card-body">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Linea)</h5>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Diseño)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Marca)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Descripcion_Producto)</p>
                  <p class="card-text">@Html.DisplayFor(modelItem => item.Precio)</p>
                 

                  <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.ID">Add</a>
                </div>
              </div>
            </div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>

