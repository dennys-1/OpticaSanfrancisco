<h1>@ViewData["Title"]</h1>

  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model) {
            <div class="col-sm-4">
              <div class="card border-primary mb-3">
                <div class="card-body">
                  <div class="card-img-actions" >
                    <img class="img-responsive"  style="width: 100%;"
                       src="/img/@item.ImagenName" alt="@item.ImagenName"  />
                  </div>
                </div>
                <div class="card-body" style="text-align: center;">
                  <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                  <p class="card-text">S/. @Html.DisplayFor(modelItem => item.Price)</p>
                  <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.ID">Agregar a carrito</a>
                </div>
              </div>
            </div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>



  